    <script>
        const now=new Date()
        console.log(now)
        console.log(now.getMinutes())
        console.log(now.getHours())
        console.log(now.getSeconds())
        console.log(`The current time is ${now.getHours()}:${now.getMinutes()}:${now.getSeconds()}`)

        function upadteclock(){
            const time =new Date()
            let hours = time.getHours()
            let minutes = time.getMinutes()
            let seconds = time.getSeconds()
            hours=hours<10?"0"+hours:hours
            minutes=minutes<10?"0"+minutes:minutes
            seconds=seconds<10?"0"+seconds:seconds
            const timenow=`${hours}:${minutes}:${seconds}`
            document.getElementById('time').innerText=timenow
        }
        setInterval(upadteclock, 1000);
        upadteclock()


        // const age=19;
        // age<18? 'hii small kid':"hello uncle";
        // console.log(age)
        // console.log(statement)

    </script>
